:javascript
  //localize dates
  $(document).ready(function (){
    $('.date').each( function(){
      date = $.datepicker.parseDate('yy-mm-dd', $(this).text().trim());
      $(this).text($.datepicker.formatDate($.datepicker.regional['es'].dateFormat, date));
    });
   });
  
#albaran  
  %h1 Listado de Albaranes
  .todos
    %table
      %tr
        %th Numero
        %th Fecha
        %th Cliente
        %th{:class => 'todos_menu'}
        %th{:class => 'todos_menu'}
        %th{:class => 'todos_menu'}

      - @albarans.each do |albaran|
        %tr
          %td
            = albaran.number
          %td.date
            = albaran.created_at
          %td
            = albaran.cliente
          %td{:class => 'todos_menu'}
            = link_to 'Ver', albaran
          %td{:class => 'todos_menu'}
            = link_to 'Editar', edit_albaran_path(albaran)
          %td{:class => 'todos_menu'}
            = link_to 'Eliminar', albaran, :confirm => 'Â¿Estas seguro?', :method => :delete
  .piepagina
    = link_to 'Nuevo Albaran', new_albaran_path
